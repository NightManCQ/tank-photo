	constructor(type : number, url : string) {
		this.url = url
		this.type = type
	}
}
/**
 * 相册类
 */
export class Album {
	/**
	 * 相册id
	 */
	id : number;
	/**
	 * 相册名称
	 */
	name : string;
	/**
	 * 封面照片途径 Url
	 */
	coverPicture : string
	/**
	 * 文件数量
	 */
	count : number = 0;
	/**
	 * 
	 */
	correlationId : Array<number> = []
	constructor(id : number, name : string, url : string) {
		this.id = id;
		this.name = name;
		this.coverPicture = url
	}
}


